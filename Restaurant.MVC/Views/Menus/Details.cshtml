@model MenùViewModel
<h1> @Model.Name </h1>


<p>Menù's Dishes</p>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Type</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Update</th>
                <th>Delete</th>
            }
              
            </tr>
    </thead>
    <tbody>
        @foreach (var dish in Model.Dishes)
        {
        <tr>
            <td>@dish.Name</td>
            <td>@dish.Description</td>
            <td>@dish.Price €</td>
            <td>@dish.Type.ToString()</td>

            @if (User.IsInRole("Manager"))
            {
                <td>
                    <a type="button" value="Edit" asp-controller="Dishes" asp-action="Edit" asp-route-id="@dish.Id" class="btn btn-success"><i class="fa fa-edit"></i>Update</a>
                </td>
            }


            @if (User.IsInRole("Manager"))
            {
        <td>
            <a type="button" value="Delete" asp-controller="Dishes" asp-action="Delete" asp-route-id="@dish.Id" class="btn btn-danger"><i class="fa fa-edit"></i>Delete</a>
        </td>
                    }
                
            </tr>
        }
    </tbody>

</table>