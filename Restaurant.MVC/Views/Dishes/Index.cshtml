@model List<DishViewModel>

<h1>Dishes</h1>
@if (User.IsInRole("Manager"))
{

   <a asp-controller="Dishes" asp-action="Create" class="btn btn-success">Create New Dish</a>
    
}

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Type</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Update</th>
                <th>Delete</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price € </td>
                <td>@item.Type</td>

                @if (User.IsInRole("Manager"))
                {
                    <td>
                        <a asp-controller="Dishes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Dishes" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                }

            </tr>
        }
    </tbody>

</table>